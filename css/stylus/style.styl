html
  font-size: 62.5%

html
body
  width 100%
  height 100%

body
  margin 0
  background #cccccc
  text-align center
  font 1rem Arial, "Helvetica Neue", Helvetica, sans-serif

.wrapper
  display inline-block
  vertical-align middle
  table.field
    td
      border 1px solid #000
      td-size = 100px
      width td-size
      height td-size
      font 5rem monospace
      text-transform: lowercase
      cursor: pointer
      &.disabled
        cursor: default
        background: #888888

.current
  font-size: 2rem
  line-height: 4rem
  &__text
    font-size: 3rem

.helper
  display inline-block
  vertical-align middle
  height 100%
  width 0